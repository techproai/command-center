{
  "name": "command-center",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "web",
    "packages/contracts"
  ],
  "scripts": {
    "dev:web": "npm --prefix web run dev",
    "build:web": "npm --prefix web run build",
    "lint:web": "npm --prefix web run lint",
    "db:generate": "npm --prefix web run db:generate",
    "db:push": "npm --prefix web run db:push",
    "dev:runtime": "uvicorn app.main:app --reload --app-dir runtime --host 127.0.0.1 --port 8010",
    "dev:worker": "celery -A app.celery_app.celery_app worker --workdir runtime --loglevel=info --pool=solo --concurrency=1",
    "test:runtime": "pytest runtime/tests"
  }
}
